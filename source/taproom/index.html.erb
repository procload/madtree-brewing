<%
  beers = data.beers.details
%>
<nav class="sidebar-nav taproom-nav">
  <h2>What's on Tap</h2>
  <ul class="nav-list">
    <% beers.each do |beer| %>
    <li class="nav-item">
    <% if ["happy-amber", "gnarly-brown", "psychopathy", "identity-crisis", "pleasant-wheat", "axis-mundi", "barrel-aged-axis-mundi"].include? beer[:url] %>
      <%= link_to beer.name, "/beer/#{beer.url}", class: "#{beer.url}" %>
    <% end %>
    </li> <!-- /nav-item -->
    <% end %>
  </ul> <!--/nav -->
  <section class="taproom-hours">
    <h2>Tap Room Hours</h2>
    <table class="hours-table">
      <tr>
        <td>
          <strong>Wed</strong>
        </td>
        <td>
          4pm &ndash; 10pm
        </td>
      </tr>
      <tr>
        <td>
          <strong>Thurs</strong>
        </td>
        <td>
          4pm &ndash; 12pm
        </td>
      </tr>
      <tr>
        <td>
          <strong>Fri</strong>
        </td>
        <td>
          4pm &ndash; 1am
        </td>
      </tr>
      <tr>
        <td>
          <strong>Sat</strong>
        </td>
        <td>
          12am &ndash; 1am
        </td>
      </tr>
      <tr>
        <td>
          <strong>Sun</strong>
        </td>
        <td>
          12pm &ndash; 8pm
        </td>
      </tr>
    </table>
  </section> <!-- /taproom-hours -->
  <p class="growler">
    Stop in a get a growler full of your favorite beer to go.
  </p>
</nav> <!-- /taproom-nav -->

<section class="content-area taproom">
  <div class="taproom-slideshow">
    <ul data-orbit data-options="bullets:false;">
      <% 1.upto(4) do |i| %>
      <li>
      <%= image_tag "taproom/img-slide-#{i}.png" %>
      </li>
      <% end %>
    </ul>
  </div> <!-- /taproom-slideshow -->
</section> <!-- /content-area -->
