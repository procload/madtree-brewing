<% content_for :page_classes do %>
  interstitial 
<% end %>

<header class="interstitial-header">
  <h1>MadTree Brewing</h1>
</header> <!-- /interstitial-header -->
<div class="interstitial-content">

  <section class="twenty-one-check">
    <h2>Are you over twenty-one?</h2>
    <div class="answers">
      <%= link_to "Yep!", "/home.html", class: "btn btn-primary" %>
      <%= link_to "Nope", "http://google.com/", class: "btn btn-primary" %>
    </div> <!-- /answers -->
  </section> <!-- /twenty-one-check -->

  <section class="brewery-info">
    <section class="hours">
      <div class="taproom-hours">
        <%= content_tag :h3, "Taproom Hours", data: { barley: "index_taproom_hours_title", barley_editor: "mini" } %>
        <%= content_tag :span, "<strong>Wednesday</strong> 4pm&ndash;10pm", class: "day", data: { barley: "index_taproom_hours_wednesday", barley_editor: "simple" } %>
        <%= content_tag :span, "<strong>Thursday</strong> 4pm&ndash;12am", class: "day", data: { barley: "index_taproom_hours_thursday", barley_editor: "simple" } %>
        <%= content_tag :span, "<strong>Friday</strong> 4pm&ndash;1am", class: "day", data: { barley: "index_taproom_hours_friday", barley_editor: "simple" } %>
        <%= content_tag :span, "<strong>Saturday</strong> 4pm&ndash;1am", class: "day", data: { barley: "index_taproom_hours_saturday", barley_editor: "simple" } %>
        <%= content_tag :span, "<strong>Sunday</strong> 4pm&ndash;8pm", class: "day", data: { barley: "index_taproom_hours_sunday", barley_editor: "simple" } %>
      </div> <!-- /tapoom-hours -->
    </section> <!-- /hours -->


    <section class="location">
      <h3>Contact Information</h3>
      <div class="address">
        <h5><i class="icon-map-marker"></i> Address</h5>
        <p>5164 Kennedy Ave.</p>
        <p>Cincinnati, OH 45213</p>
      </div> <!-- /address -->
      <div class="phone">
        <h5><i class="icon-phone"></i> Phone</h5>
        <p>513-836-8733</p>
      </div> <!-- /phone -->

    </section> <!-- /location -->
  </section>

</div>
