<% founder = locals[:founder] %>
<%= partial 'community/nav' %>

<section class="content-area community">
  <div class="content-area-image">
    <%= image_tag "images/community/#{founder[:url]}/img-about.png", alt: founder[:name] %>
  </div> <!-- /content-area-image -->

  <section class="content-area-body">
    <header class="content-body-header">
      <h2><%= founder[:name] %></h2>
      <h3><%= founder[:title] %></h3>
    </header> <!-- /content-area-header -->
    <div class="content-body">
      <p>
      <%= founder[:bio] %>
      </p>
    </div> <!-- /content-body -->
    <footer class="content-body-footer">
      <div class="favorite-beer">
        <h3><%= founder[:name].split(' ').first %>'s <br /> Favorite <br /> Beer</h3>
        <%= image_tag "images/community/#{founder[:url]}/img-can.png", alt: founder[:favorite] %>
      </div> <!-- /favorite-beer -->
    </footer> <!-- /content-body-footer -->
  </section> <!-- /content-area-body -->
</section> <!-- /content-area -->
