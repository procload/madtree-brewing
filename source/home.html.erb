<% content_for :page_classes do %>
  home 
<% end %>
<% content_for :site_header do %>
  <%= partial 'partials/header-hero' %>
  <%= partial 'partials/nav' %>
<% end %>

<div class="container">
  <section class="find-madtree">
    <div id="map-canvas">
      <div id="map"></div>
      <div id="loc-list">
        <ul id="list"></ul> <!-- /list -->
      </div> <!-- /loc-list -->
    </div> <!-- /map-canvas -->
    <section class="find-beer">
      <div>
        <h2>Find Madtree Beer</h2>
        <div id="form-container">
          <form id="user-location" method="post" action="#">
            <div class="input-group">
              <input type="text" id="address" name="address" class="form-control" placeholder="Enter your address or zip code">
              <span class="input-group-btn">
                <button class="btn btn-default" id="submit" type="submit">Find Beer!</button>
              </span> <!-- /input-group-btn -->
            </div><!-- /input-group -->
          </form> <!-- /user-location -->
        </div> <!-- /form-container -->
        <p class="disclaimer">Note: <em>MadTree cannot guarantee beer will be available.</em></p>
      </div>
      <div class="search-result-info">
        <p class="disclaimer"><strong>Note:</strong></p>
        <p class="disclaimer">Accounts listed have purchased at least one MadTree product in the last 2 months. Please call the retailer to inquire if they currently carry the product.</p>
        <p class="disclaimer">There are several accounts (ie. Dutch's, Jungle Jims, and Whole Foods) that serve for on promise consumption as well as carryout</p>
      </div>
    </section> <!-- /find-beer -->
    <section class="address-phone">
      <div class="address">
        <h5><i class="icon-map-marker"></i> Address</h5>
        <p>5164 Kennedy Ave.</p>
        <p>Cincinnati, OH 45213</p>
      </div> <!-- /address -->
      <div class="phone">
        <h5><i class="icon-phone"></i> Phone</h5>
        <p>513-836-8733</p>
      </div> <!-- /phone -->
      <div class="email">
        <h5><i class="icon-envelope"></i> Email</h5>
        <p>
        <%= link_to "Keg/Dock Sales", "mailto:docksales@madtreebrewing.com" %>
        &mdash;
        <%= link_to "Outside Sales", "mailto:sales@madtreebrewing.com" %>
        &mdash;
        <%= link_to "Taproom", "mailto:taproom@madtreebrewing.com" %>
        &mdash;
        <%= link_to "Misc", "mailto:info@madtreebrewing.com" %>
        </p>
      </div> <!-- /phone -->
    </section> <!-- /address-phone -->
  </section> <!-- /find-madtree -->

  <section class="upcoming-events">
    <div class="event-contact">
      <h4>Interested in booking a <%= link_to "taproom", "/taproom.html" %> event? </h4> Or looking for sponsorship or charitable donation? Email <%= link_to "events@madtreebrewing.com", "mailto:events@madtreebrewing.com" %> for more information.
    </div> <!-- /event-contact -->
    <header class="section-header upcoming-header">
      <h3>Upcoming Events</h3>
    </header> <!-- /upcoming-header -->

    <article class="event-teaser">
      <header class="teaser-header">
        <a href="https://www.facebook.com/events/1401111460131415/"><span class="date">Saturday, Feb. 1st at 12pm</span> &mdash; <strong>Winter Bonanza</strong></a>
      </header> <!-- /teaser-header -->
      <div class="teaser-body">
        <p>MadTree is turning one. Well before we were brewing beer at the production level, we've hosted an annual celebration in our backyards with friends over big delicious and warming craft beers. This year we want to share the Winter Bonanza with everyone!</p>
        <h4>Beers</h4>
        <ul>
          <li>10 regional/national beers</li>
          <li>10 local beers</li>
          <li>Lots of barrel aged MadTree beers</li>
        </ul>
        <h4>Bands</h4>
        <ul>
          <li>Cody J. Martin (inside 5-6:30)</li>
          <li>Josh Eagle (inside 8-10)</li>
          <li><%= link_to "Rumpke Mountain Boys (outside 6:30 - 8 &amp; 10 - midnight)", "https://www.facebook.com/RumpkeMountainBoys" %></li>
        </ul>
        <h4>Food</h4>
        <ul>
          <li><%= link_to "Maribelle's eat + drink", "https://www.facebook.com/pages/Maribelles-eat-drink/210053213687" %></li>
          <li><%= link_to "Catch-a-Fire Pizza", "https://www.facebook.com/pages/Catch-a-Fire-Pizza/470943889622903" %></li>
          <li><%= link_to "C'est Cheese Food Truck", "https://www.facebook.com/CestCheeseCincy" %></li>
        </ul>
      </div> <!-- /teaser-body -->
      <footer class="teaser-footer">
        <%= link_to "Read more&hellip;", "https://www.facebook.com/events/1401111460131415/" %>
      </footer> <!-- /teaser-footer -->
    </article> <!-- /event-teaser -->
    <footer class="section-footer">
      <%= link_to "View all upcoming events", "https://www.facebook.com/MadTree/events" %>
    </footer> <!-- /section-footer -->
  </section> <!-- /upcoming-events -->
</div> <!-- /container -->

<section class="collage">
  <%= partial "partials/instagram-content" %>
</section> <!-- /collage -->

<div class="container">
  <section class="twitter-stream">
    <h4>Twitter</h4>
    <a class="twitter-timeline" width="410px" data-theme="dark"  data-chrome="nofooter noborders noheader transparent" href="https://twitter.com/MadTreeBrewing" data-widget-id="442704604644401152" >Tweets by @MadTreeBrewing</a>
    <script>!function(d,s,id){var js,fjs=d.getElementsByTagName(s)[0],p=/^http:/.test(d.location)?'http':'https';if(!d.getElementById(id)){js=d.createElement(s);js.id=id;js.src=p+"://platform.twitter.com/widgets.js";fjs.parentNode.insertBefore(js,fjs);}}(document,"script","twitter-wjs");</script>

    
  </section> <!-- /twitter-stream -->
  <%= partial 'partials/untappd' %>
</div>

<section class="madtree-photo">
  <%= image_tag "backgrounds/bg-about.png" %>
</section> <!-- /madtree-photo -->

<script id="untappd_template" type="text/x-handlebars-template">
<table class="untappd table table-striped">
  <tr class="consumed">
    <th colspan="4">Total Beers Drank</th>
  </tr>
  <tr>
    <td colspan="4" class="total">{{totalBeers}}</td>
  </tr>
  <tr class="breakdown">
    <th>This Month</th>
    <td>{{monthlyBeers}}</td>
    <th class="">This Week</th>
    <td>{{weeklyBeers}}</td>
  </tr>
  <tr class="ratings">
    <th>Brewery Rating</th>
    <td class="rating">{{breweryRating}}<span>/5</span></td>
    <th >Total Beers</th>
    <td  class="total-beer">{{beerCount}}</td>
  </tr>
  <tr>
    <th>Who's drinking</th>
    <td class="whos" colspan="3">
     {{#each whosDrinking}}
      <a href="http://untappd.com/user/{{this.user.user_name}}" target="_blank">{{this.user.user_name}}</a>
     {{/each}}
    </td>
  </tr>
</table>
</script>
