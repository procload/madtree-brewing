current_page: "beers"
sub_page: "psychopathy"
---
<% content_for :page_classes do %>
  interior psychopathy 
<% end %>
<% content_for :site_header do %>
  <%= partial '../partials/interior-nav' %>
  <%= partial '../partials/section-nav-beer' %>
<% end %>

<div class="container">
  <section class="beer-description">
    <div class="beer-images">
      <%= image_tag "beers/img-psychopathy-combined-rev.png" %>
    </div> <!-- /beer-images -->
    <div class="beer-details">
      <header class="beer-detail-header">
        <div class="pint">
          <%= image_tag "beers/psychopathy/img-pint.png" %>
        </div>
        <h2>Psyc<span>hop</span>athy IPA</h2>
      </header> <!-- /beer-detail-header -->
      <p>The subtle malt backbone combats the bitterness and intensity of floral, grassy and citrus hop flavors. However, taste is perception. What's your slant?</p>
      <p>
        <%= link_to "<i class='icon-beaker'></i> Download the Recipe", "/recipes/psychopathyRecipe.pdf" %>
      </p>
      <table class="table beer-stats">
        <tr class="numbers">
          <th class="abv-label">ABV</th>
          <td class="abv-amount">6.9%</td>
          <th class="ibu-label">IBU</th>
          <td class="ibu-amount">70</td>
        </tr>
        <tr>
          <th>Malts</th>
          <td colspan="3" class="ingredients">2-Row, Vienna, Caramel 40L, Carapils</td>
        </tr>
        <tr>
          <th>Hops</th>
          <td colspan="3" class="ingredients hops">Cascade, Chinook, Centennial</td>
        </tr>
      </table> <!-- /beer-stats -->
    </div> <!-- /beer-details -->
  </section> <!-- /beer-description -->
</div>
