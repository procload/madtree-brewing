<% content_for :page_classes do %>
  interior gnarly-brown-vanilla 
<% end %>
<% content_for :site_header do %>
  <%= partial '../partials/interior-nav' %>
  <%= partial '../partials/section-nav-beer' %>
<% end %>

<div class="container">
  <section class="beer-description">
    <div class="beer-images">
    </div> <!-- /beer-images -->
    <div class="beer-details">
      <header class="beer-detail-header">
        <h2>Gnarly Brown Vanilla</h2>
      </header> <!-- /beer-detail-header -->
      <p>Gnarly on Vanilla!</p>
      <p>
        <%= link_to "<i class='icon-beaker'></i> Email us for the Recipe", "mailto:recipes@madtreebrewing.com" %>
      </p>
      <table class="table beer-stats">
        <tr class="numbers">
          <th class="abv-label">ABV</th>
          <td class="abv-amount">7%</td>
          <th class="ibu-label">IBU</th>
          <td class="ibu-amount">32</td>
        </tr>
        <tr>
          <th>Malts</th>
          <td colspan="3" class="ingredients">2-Row, Victory, Extra Special, Brown, Pale Chocolate, Roasted Barley</td>
        </tr>
        <tr>
          <th>Hops</th>
          <td colspan="3" class="ingredients hops">Cascade, Chinook</td>
        </tr>
        <tr>
          <th>Adjuncts</th>
          <td colspan="3" class="ingredients hops">Vanilla Beans</td>
        </tr>
      </table> <!-- /beer-stats -->
    </div> <!-- /beer-details -->
  </section> <!-- /beer-description -->
</div>


