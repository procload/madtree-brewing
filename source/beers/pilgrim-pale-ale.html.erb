<% content_for :page_classes do %>
  interior pilgrim-pale-ale 
<% end %>
<% content_for :site_header do %>
  <%= partial '../partials/interior-nav' %>
  <%= partial '../partials/section-nav-beer' %>
<% end %>

<div class="container">
  <section class="beer-description">
    <div class="beer-images">
    </div> <!-- /beer-images -->
    <div class="beer-details">
      <header class="beer-detail-header">
        <div class="pint">
          <%= image_tag "beers/sprye/img-pint.png" %>
        </div>
        <h2>Pilgrim Pale Ale</h2>
      </header> <!-- /beer-detail-header -->
      <p>We are thankful for hops, malted barley, cranberries, walnuts, vanilla beans and no Pilgrims were hurt.</p>
      <table class="table beer-stats">
        <tr class="numbers">
          <th class="abv-label">ABV</th>
          <td class="abv-amount">5%</td>
          <th class="ibu-label">IBU</th>
          <td class="ibu-amount">14</td>
        </tr>
        <tr>
          <th>Malts</th>
          <td colspan="3" class="ingredients">2-Row, Munich 10L, Rye, Melanoidin, Barley Flakes</td>
        </tr>
        <tr>
          <th>Hops</th>
          <td colspan="3" class="ingredients hops">Pilgrim</td>
        </tr>
        <tr>
          <th>Adjuncts</th>
          <td colspan="3" class="ingredients hops">Cranberry, Walnut, Vanilla Beans</td>
        </tr>
      </table> <!-- /beer-stats -->
    </div> <!-- /beer-details -->
  </section> <!-- /beer-description -->
</div>


