current_page: "beers"
sub_page: "sprye"
---
<% content_for :page_classes do %>
  interior sprye 
<% end %>
<% content_for :site_header do %>
  <%= partial '../partials/interior-nav' %>
  <%= partial '../partials/section-nav-beer' %>
<% end %>

<div class="container">
  <section class="beer-description">
    <div class="beer-images">
      <%= image_tag "beers/img-sprye-combined-rev.png" %>
    </div> <!-- /beer-images -->
    <div class="beer-details">
      <header class="beer-detail-header">
        <h2>Sprye</h2>
      </header> <!-- /beer-detail-header -->
      <p>Citrus and piney notes burst forth on top of an earthy and spicy rye flavor. As the ice melts away from your cans, meet life head on this spring with a Sprye in hand.</p>
      <p>
        <%= link_to "<i class='icon-beaker'></i> Email us for the Recipe", "mailto:recipes@madtreebrewing.com" %>
      </p>
      <table class="table beer-stats">
        <tr class="numbers">
          <th class="abv-label">ABV</th>
          <td class="abv-amount">5%</td>
          <th class="ibu-label">IBU</th>
          <td class="ibu-amount">40</td>
        </tr>
        <tr>
          <th>Malts</th>
          <td colspan="3" class="ingredients">Rye, Flaked Barley, Munich 10L, Melanoidin</td>
        </tr>
        <tr>
          <th>Hops</th>
          <td colspan="3" class="ingredients hops">Centennial, Chinook, Simcoe</td>
        </tr>
      </table> <!-- /beer-stats -->
    </div> <!-- /beer-details -->
  </section> <!-- /beer-description -->
</div>

