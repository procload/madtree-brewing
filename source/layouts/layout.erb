<head>
  <meta charset="utf-8">
  <meta http-equiv="X-UA-Compatible" content="IE=edge,chrome=1">

  <title>MadTree Brewing</title>
  <meta name="description" content="">
  <meta name="author" content="">
  <meta name="viewport" content="width=device-width,initial-scale=1">
    
    <%= stylesheet_link_tag "normalize", "screen" %>
    <%= javascript_include_tag  "all" %>

    <script type="text/javascript" src="//use.typekit.net/sfl3ims.js"></script>
    <script type="text/javascript">try{Typekit.load();}catch(e){}</script>

</head>
  
<body class="<%= page_classes %>">
  <div class="wrapper">
  <header class="site-header">
    <section class="header-content">
      
      <%= link_to image_tag("data:image/gif;base64,R0lGODlhAQABAIAAAAAAAP///yH5BAEAAAAALAAAAAABAAEAAAIBRAA7", alt: 'MadTree Brewing', class: 'logo'), '/' %>
      <nav class="site-nav">
        <ul class="nav-list">
          <% ['beer', 'taproom', 'community'].each do |nav_item| %>
          <li class="nav-item">
            <%= link_to nav_item, "/#{nav_item}" %>
          </li>
          <% end %>
        </ul> <!-- /nav-list -->
      </nav> <!-- /site-nav -->
    </section> <!-- /header-content -->
  </header> <!-- /site-header -->
    <section class="main-content" role="main">
      <%= yield %>
    </section> <!-- /main -->

  <footer class="site-footer">
    <section class="footer-content">
      <p class="copyright">&copy; Copyright <%= copyright_years('2013') %> MadTree Brewing Co.</p> 
    </section> <!-- /footer-content -->
  </footer> <!-- /site-footer -->
  </div> <!-- /wrapper -->
<script>
$(document).foundation();
</script>
</body>
</html>
