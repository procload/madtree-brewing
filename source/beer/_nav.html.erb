<%
  beers = data.beers.details
%>
<nav class="beer-nav sidebar-nav">
  <h2>Our Beers</h2>
  <ul class="nav-list">
    <h4>Available in Cans &amp; Draft</h4>
    <% beers.each do |beer| %>
      <% if ["happy-amber", "gnarly-brown", "psychopathy"].include? beer.url %>
      <li class="nav-item">
      <%= link_to beer.name, "/beer/#{beer.url}", class: "#{beer.url}" %>
      </li> <!-- /nav-item -->
      <% end %>
    <% end %>
  </ul> <!-- /nav -->
  <ul class="nav-list">
    <h4>Available in Draft Only</h4>
    <% beers.each do |beer| %>
      <% if ["identity-crisis", "pleasant-wheat", "axis-mundi", "barrel-aged-axis-mundi"].include? beer.url %>
    <li class="nav-item">
      <%= link_to beer.name, "/beer/#{beer.url}", class: "#{beer.url}" %>
    </li> <!-- /nav-item -->
      <% end %>
    <% end %>
  </ul> <!-- /nav -->
</nav> <!-- /beer-nav -->
