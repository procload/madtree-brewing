<% data.beers.each do |beer| %>
  <%
    custom_logo = beer.logo == "" ? "img-logo-ha.png" : beer.logo
    primary_color = beer.primary_color || ""
    secondary_color = beer.secondary_color || ""
    tertiary_color = beer.tertiary_color || ""
    text_color = beer.text_color || "#FFF"
    background_image = beer.background_image || ""
  %>
  $primary_color : <%= primary_color %>;
  $secondary_color : <%= secondary_color %>;
  $tertiary_color  : <%= tertiary_color %>;

  body.interior.<%= beer.url %> {
    background-color: <%= primary_color %>; 
    <% if background_image == "/images/backgrounds/bg-beer-default.png" %>
      @include background(image-url("<%= background_image %>") no-repeat top right, image-url("backgrounds/subtle_carbon.png") repeat top left);
    <% else %>
      @include background(<%= primary_color %> image-url("<%= background_image %>") no-repeat top right);
    <% end %>
    
    .caret {
      border-top-color: <%= primary_color %>;
    }
    .site-header {
      color: <%= primary_color %>;
    }
    .header-toolbar {
      background: $secondary_color;
    }
    .navbar {
      background: $secondary_color;
      background: transparentize(lighten($secondary_color, 3%),.1);
      &.section-navbar {
        background: $tertiary_color;
        background: transparentize($tertiary_color,.1);
        a {
          color: <%= primary_color %>;
        }
        li.active {
          > a {
            color: $white;
          }
        } //active
        .dropdown-menu > li.active a {
          background: $primary_color;
          color: $white;
        }
        .dropdown-menu > li > a {
          color: $secondary_color;
          &:hover,
          &:focus {
            color: $white;
            background: <%= primary_color %>; 
          }
        }
      }
      .main-nav li {
        &:nth-child(even) {
          background: $secondary_color;
          background: transparentize($secondary_color, .2); 
          @include respond-to(41.25em) {
            background: none;
          }
        }
        &:nth-child(odd) {
          background: rgba(97,19,9,1);
          @include respond-to(41.25em) {
            background: none;
          }
        }
      } //main-nav
    }
    .navbar-inner {
      .logo {
        @include respond-to(41.25em) {
          @include replace-text(362px, 183px, image-url("logos/<%=custom_logo%>") no-repeat top left);         
        }
      }
    }
    .beer-details {
      h2 {
        color: <%= text_color %>;
        &.no-image {
          font-family: "flood-std";
        }
      } //h2 
      p {
        color: <%= text_color %>;
        > a {
          color: $tertiary_color;
        }
      }
      
    } //beer-details
    .site-footer {
      background: $secondary_color;
      a {
        color: <%= primary_color %>;
      }
    }
    .nav-item-header {
      h4 {
        color: $tertiary_color;
      }
    }
    .nav-item-body {
      color: <%= primary_color %>;
    }
    .beer-stats {
      border-color: $secondary_color;
      background: transparentize( $secondary_color, .8);
    }
  }
<% end %>
